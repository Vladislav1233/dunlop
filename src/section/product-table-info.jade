mixin td-table(name)
    +e('td')(class!=attributes.class) #{name}

//- mixin td-table-size(size, name)
//-     +e('td')(class!=attributes.class)
//-         +e('span').extra-load #{size}
//-         +e('span').size-load #{name}
mixin td-table-size(size, name)
    +e('td').size-load #{name}


