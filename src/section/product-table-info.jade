//- Таблица с характеристиками для страницы Продукт
mixin table_info(close)
    // BEGIN section.b-table-info
    +b.table-info--link
        if close != true
            +open-table('скрыть список типоразмеров')
        +e('table').table
            +e('thead').table-header
                tr
                    +e('td').diameter
                        | Посадочный
                        br
                        | диаметр
                    +e('td').size Размер
                    +e('td')(colspan='2').load
                        | Индекс нагрузки
                        br
                        | и скорости
            +e('tbody')
                +e('tr').underlined
                    +td-table('15"').radius
                    +td-table-size('XL','205/70R15')
                    +td-table('75H').load-info
                    +e('td').text XL
                +e('tr').underlined
                    +td-table('15"').radius
                    +td-table-size('XL','205/70R9')
                    +td-table('75H').load-info
                    +e('td').text S
                +e('tr').underlined
                    +td-table('15"').radius
                    +td-table-size('XL','205-/170R105')
                    +td-table('75H').load-info
                    +e('td').text XXL

    // END section.b-table-info

