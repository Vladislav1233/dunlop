        +e('li').item-line
            +e.caption Спорт
            +e.line--fill_1
        +e('li').item-line
            +e.caption Туризм
            +e.line--fill_2
        +e('li').item-line
            +e.caption Спорт
            +e.line--fill_3
        +e('li').item-line
            +e.caption Туризм
            +e.line--fill_4

