//- Шаблон списка товаров.
//- ====================

mixin catalog_item_price(sum,value)
    +e.price(class!=attributes.class)
        +e.sum #{sum}
            span #{value}
        +b('div')(href='' title='Купить у дилера').button--catalog Купить у дилера

//- шаблон товара
mixin catalog_item(product, image, title, text, info)
    if product
        +e('a')(href='http://dunlop.kontora-dev.ru/product.html' title='').link
            +e('img')(src="#{image}" alt="#{title}" title="#{title}").image
            +e.title #{title}
            +e('p').text #{text}
            +e('p').text--info #{info}
            +e.new #{product}
    else
        +e('a')(href='http://dunlop.kontora-dev.ru/product.html' title='').link
            +e('img')(src="#{image}" alt="#{title}" title="#{title}").image
            +e.title #{title}
            +e('p').text #{text}
            +e('p').text--info #{info}

//- шаблон отличной карточки для шин
mixin catalog_item_anower_info()
    +e('ul').list-line
