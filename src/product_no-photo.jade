//- Используем Dunlop: default.jade: mixin +section_default()
include ./section/default.jade
//- Используем Dunlop: tab.jade: mixin +tab()
include ./section/tab.jade
//- Используем Dunlop: download_file.jade: mixin +download_file()
include ./section/download_file.jade
//- Используем Dunlop: product_pic.jade: mixin +product_pic()
include ./section/product_pic.jade
//- Используем Dunlop: product-table-info.jade: mixin +table_info()
include ./section/product-table-info.jade
//- Используем Dunlop: product-description.jade: mixin +product_description()
include ./section/product-description.jade
//- Используем Dunlop: product-diller-block.jade: mixin +product-diller-block()
include ./section/product-diller-block.jade
//- Используем Dunlop: breadcrumbs.jade: mixin +breadcrumbs()
include ./section/breadcrumbs.jade
//- Используем Dunlop: choose-region.jade: mixin +popup-city(mixin, name)
include ./section/choose-region.jade
//- Используем Dunlop: open-close.jade: mixin +open_close(text)
include ./section/open-close.jade


//- Используем стандартный шаблон Dunlop
extends ./template/dunlop_layout

//- Модифицируем head
block head
    - var pageTitle = 'КУПИТЬ ШИНЫ DUNLOP SP SPORT LM703 165/55R15 75V';
    - var main_page = false;
    - var background = '/images/inhtml/auto_bg.jpg';
    - var footer_inner = true;
    - var mod="b-footer-main--how-to";
    - var shadow = true;

//- Выводим контент
block content
    +b.container--product
        +breadcrumb('Шины для легковых автомобилей', 'Летние шины')
        +b('h1').title--product Купить шины Dunlop sp sport lm703 165/55R15 75V

        +b('a')(href="javascript:void(0);" data-target="#choose-region" title="Выбрать город").choose-city__link.js-open-popup.js-select-city Нижний новгород
    +b.line
    +b.container--product
        +b.product.model-703
            +e.info-block
                //- Используем Dunlop: include ./section/product_pic.jade
                +product_pic('/images/inhtml/no_photo.png', 'new', '35 700 руб.')
                //- Используем Dunlop: include ./section/product-table-info.jade
                +table_info()
            +e.description-block
                //- Используем Dunlop: include ./section/tab.jade
                +tab('Описание товара', 'Купить у дилера')

                +e.top-description
                    //- Название шины
                    +e.logo-name
                        h1 sp sport lm703
                        +e('img')(src='/images/content/name-logo.png' alt='' title='').image
                    +e.download
                        //- Используем Dunlop: include ./section/download_file.jade
                        +download_file('PDF', 'Каталог летних шин')

                //- Используем Dunlop: include ./section/product-description.jade
                +product_description()

    //- Используем Dunlop: popups.jade: mixin +popup(mixin, name)
    +popup-region('choose-region', 'Выбор региона', '')
    +popup-region('choose-city', 'Выбор города', 'back')